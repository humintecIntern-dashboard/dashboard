<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.humintecTest.dashboard.dao.SlideDateDao">
    <select id = "selectSlideDate" parameterType="SlideDateVo" resultType="SlideDateVo">
        select
               date_format(last_scan_date, '%Y-%m-%d')as date,
               count(*) as slide_sum
        from
               slide_list
        group by date
        order by date asc;
    </select>
    <insert id = "insertSlideDate" parameterType="SlideDateVo">
        insert into
                slide_per_date
        values
                (#{date},#{slide_sum})
    </insert>
    <delete id = "deleteSlideDate">
        truncate
            slide_per_date
    </delete>
    
    <select id = "selectSlidePerDateList" parameterType = "com.humintecTest.dashboard.request.DateRequestFormat" resultType = "SlideDateVo">
    	select
    		date as date,
    		slide_sum as slide_sum
    	from
    		slide_per_date
    	where
    		date between date_format(#{startDate}, '%Y-%m-%d') and date_format(#{finishDate}, '%Y-%m-%d')
    </select>
</mapper>

