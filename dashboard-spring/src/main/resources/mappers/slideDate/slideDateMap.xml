<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.humintecTest.dashboard.dao.SlideDateDao">
    <select id = "selectSlideDate" parameterType="SlideDateVo" resultType="SlideDateVo">
        select
            date_format(last_scan_date, '%Y-%m-%d')as date,
               count(*) as slide_sum
        from
            slide_list
        group by date
        order by date asc;
    </select>
    <insert id = "insertSlideDate" parameterType="SlideDateVo">
        insert into
            slide_per_date
        values
            (#{date},#{slide_sum})
    </insert>
    <delete id = "deleteSlideDate">
        truncate
            slide_per_date
    </delete>
    <select id = "showSlideDate" resultType="SlideDateVo" parameterType="SlideDateVo">
        select *
        from slide_per_date
    </select>
    <select id = "selMonth" resultType="SlideDateVo" parameterType="SlideDateVo">
        select
            date_format(date,'%Y-%m') as month,
        sum(slide_sum) as slide_sum
        from slide_per_date
        group by
        month
    </select>
    <select id = "selYear" resultType="SlideDateVo" parameterType="SlideDateVo">
        select
            date_format(date,'%Y') as year,
        sum(slide_sum) as slide_sum
        from slide_per_date
        group by
        year
    </select>
</mapper>
